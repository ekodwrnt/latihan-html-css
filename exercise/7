<?php
//1.Menyusun Barisan Bintang
$i = 1;
for($i=1;$i<=5;$i++){
  echo "*";
  echo "\n";
}

//2.Menyusun Barisan Bintang Dengan Nested Looping
$j = 1;
for($j=1; $j<=5; $j++){
  for($col=1; $col<=5; $col++){
    echo "*";
  }
echo "\n";
}

//3.Menyusun Barisan Tangga Bintang Dengan Nested Looping
$a = 1;
for($a=1; $a<=5; $a++){
  for($b=1; $b<=$a; $b++){
    echo"*";
  }
echo "\n";
}

?>
